<section>

  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="col-sm-6">Name</th>
          <th class="col-sm-6">Count</th>
          <th class="col-sm-1"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Product</td>
          <td><%= @product_count %></td>
          <td><%= link_to fa_icon('list'), [:admin, :products], class: 'btn btn-sm btn-info' %></td>
        </tr>
        <tr>
          <td>Category</td>
          <td><%= @category_count %></td>
          <td><%= link_to fa_icon('list'), [:admin, :categories], class: 'btn btn-sm btn-info' %></td>
        </tr>
      </tbody>
    </table> 

  </div>

</section>


